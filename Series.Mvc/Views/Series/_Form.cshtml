@model Serie

@using (Html.BeginForm("Store", "Series", FormMethod.Post))
{
    <div class="form-group row">
        @Html.LabelFor(s => s.Titulo, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(s => s.Titulo, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Titulo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(s => s.Descricao, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(s => s.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(s => s.Genero, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(s => s.Genero, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Genero, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(s => s.Ano, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(s => s.Ano, new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Ano, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(s => s.Id)
    <button type="submit" class="btn btn-success float-right">Salvar</button>
}